<div{{ attributes }}>
    <div class="card-header">
        <h2>Portfolios universitaires</h2>

        {% if 'dashboard' not in app.request.uri %}
            <div class="header-actions">
                <div class="actions d-flex gap-3 align-items-baseline">
                    <button class="primary-btn" data-bs-toggle="modal"
                            data-bs-target="#staticBackdropDelete">
                        Réinitialiser les portfolios sélectionnés
                    </button>
                    <!-- Modal Delete -->
                    <div class="modal modal-lg fade" id="staticBackdropDelete" data-bs-backdrop="static"
                         data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                         aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="staticBackdropLabel">Voulez-vous vraiment
                                        réinitialiser
                                        ces
                                        portfolios
                                        ?</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Les portfolios sélectionnés seront réinitialisés. Êtes-vous sûr de vouloir
                                        continuer ?</p>
                                    <p style="color: red">Attention, cette action est irréversible !</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler
                                    </button>
                                    <button class="btn btn-primary"
                                            data-action="live#action"
                                            data-live-action-param="resetSelectedPortfolios"
                                            data-bs-dismiss="modal">
                                        Supprimer
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    <div class="card-body">
        {% if this.allPortfolios is not empty %}
            <table>
                <thead>
                <tr>
                    {% if 'dashboard' not in app.request.uri %}
                        <th>
                            <input type="checkbox" id="selectAll" data-action="live#action" class="form-check-input"
                                   data-live-action-param="selectAll"/>
                        </th>
                    {% endif %}
                    <th>Nom/Type</th>
                    <th>Année</th>
                    <th>Modifié le</th>
{#                    <th>Compétences</th>#}
                    <th>Actions</th>
                </thead>
                <tbody>
                {% for portfolio in this.allPortfolios %}
                    <twig:PortfolioUnivBiblioCard id="{{ portfolio.id }}"/>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-warning col-6 text-center m-auto mt-5 mb-4" role="alert">
                Aucun portfolio n'a été trouvé.
            </div>
        {% endif %}
    </div>
</div>
