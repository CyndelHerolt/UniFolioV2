<div{{ attributes }} class="h-100">

    {% set totalValidations = this.trace.validations|length %}
    {% set validated = 0 %}

    {% for validation in this.trace.validations %}
        {% if validation.etat == 3 %}
            {% set validated = validated + 1 %}
        {% endif %}
    {% endfor %}

    {% set percentage = 0 %}
    {% if totalValidations != 0 %}
        {% set percentage = (validated/totalValidations)*100 %}
    {% endif %}

    <div class="my_card h-100 d-flex flex-column">
        <div class="card-header d-flex justify-content-between">
            <h5 class="card-title">{{ this.trace.libelle }}</h5>
            <input type="checkbox" class="form-check-input"
                   data-model="selectedTraces[]"
                   value="{{ this.trace.id }}"/>
        </div>
        <div class="card-body d-flex flex-column justify-content-between">
            <div class="card-infos-min border-bottom">
                <div class="d-flex flex-column w-100">
                    <div class="d-flex justify-content-between">
                        <small>Publiée le : {{ this.trace.dateCreation|date("d-m-Y") }}</small>
                        <small>
                            {% if this.trace.type is null %}
                                Type non défini
                            {% else %}
                                {{ this.trace.contenu|length }}
                                {{ this.trace.type|lower }}{% if this.trace.contenu|length > 1 %}s{% endif %}
                            {% endif %}
                        </small>
                    </div>
                    {% if this.trace.validations is empty or this.trace.contenu is empty or this.trace.contenu is null or this.trace.description is empty or this.trace.description is null or this.trace.contexte is empty or this.trace.contexte is null %}
                        <div class="d-flex justify-content-center">
                            <div>
                                <small type="button"
                                       class="btn text-danger d-flex align-items-center gap-2 dropdown-toggle"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                    <twig:ux:icon name="bi:exclamation-triangle-fill" width="15px" height="auto"/>
                                    Trace incomplète
                                </small>
                                <ul class="dropdown-menu p-3">
                                    {% if this.trace.validations is empty %}
                                        <li class="text-danger mb-2 mt-2">
                                            Aucune compétence liée
                                        </li>

                                    {% endif %}
                                    {% if this.trace.contenu is empty or this.trace.contenu is null %}
                                        <li class="text-danger mb-2 mt-2">
                                            Aucun média d'illustration
                                        </li>

                                    {% endif %}
                                    {% if this.trace.description is empty or this.trace.description is null %}
                                        <li class="text-danger mb-2 mt-2">
                                            Aucun argumentaire
                                        </li>

                                    {% endif %}
                                    {% if this.trace.contexte is empty or this.trace.contexte is null %}
                                        <li class="text-danger mb-2 mt-2">
                                            Pas de contexte renseigné
                                        </li>

                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="card-competences">
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <div class="accordion-item">
                        <div class="accordion-header" id="flush-heading{{ this.trace.id }}">
                            <button class="accordion-button collapsed align-items-center flex-column" type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapse{{ this.trace.id }}" aria-expanded="false"
                                    aria-controls="flush-collapse{{ this.trace.id }}">
                                <div class="col-11">
                                    <h6>Validation des compétences</h6>
                                    <div class="progress">
                                        {% if percentage == 0 %}
                                            <div class="progress-bar" role="progressbar"
                                                 style="width: 100%; background: #6F18AD26"
                                                 aria-valuenow="0" aria-valuemin="0"
                                                 aria-valuemax="100">
                                                0%
                                            </div>
                                        {% endif %}
                                        <div class="progress-bar" role="progressbar"
                                             style="width: {{ percentage|round }}%"
                                             aria-valuenow="{{ percentage|round }}" aria-valuemin="0"
                                             aria-valuemax="100">
                                            {{ percentage|round }}%
                                        </div>
                                    </div>
                                </div>
                            </button>
                        </div>
                        <div id="flush-collapse{{ this.trace.id }}" class="accordion-collapse collapse"
                             aria-labelledby="flush-heading{{ this.trace.id }}"
                             data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body" style="padding: 0">
                                {% if this.trace.validations is empty %}
                                    <div class="d-flex mb-2 mt-2 justify-content-center">
                                    <p class="text-danger d-flex align-items-center gap-2 ">
                                        <twig:ux:icon name="bi:exclamation-octagon" width="15px" height="auto"/>
                                        Aucune compétence liée
                                    </p>
                                    </div>
                                {% else %}
                                    {% for validation in this.trace.validations %}
                                        <div class="card-competences d-flex justify-content-between align-items-center">
                                            {% if validation.apcNiveau and validation.apcNiveau.actif == true %}
                                                <small><span
                                                            class="ue {{ validation.apcNiveau.apcCompetence.couleur }}txt">{{ validation.apcNiveau.apcCompetence.nomCourt }} •</span> {{ validation.apcNiveau.libelle }}
                                                </small><br>
                                            {% else %}
                                                <small><span
                                                            class="ue {{ validation.apcNiveau.apcCompetence.couleur }}txt">{{ validation.apcNiveau.apcCompetence.nomCourt }} •</span> {{ validation.apcNiveau.libelle }}
                                                </small>
                                            {% endif %}
                                            <span>
                                        {% if validation.etat == 0 %} 0
                                        {% elseif validation.etat == 1 %} 1
                                        {% elseif validation.etat == 2 %} 2
                                        {% elseif validation.etat == 3 %} 3
                                        {% endif %}
                                        </span>
                                        </div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% if this.trace.tracePages is empty %}
                <p class="text-danger d-flex align-items-center gap-3 mt-3">
                    <twig:ux:icon name="bi:exclamation-triangle-fill" width="25px" height="auto"/>
                    Cette trace n'est pas liée à un portfolio, elle n'est donc pas visible par les enseignants et ne sera pas évaluée.
                </p>
            {% endif %}
            </div>
            <div class="d-flex justify-content-evenly m-3 btn_group">
                <a href="{{ path('app_trace_show', {'id': this.trace.id}) }}">
                    <button class="btn btn-primary text-uppercase">Voir</button>
                </a>
                <a href="{{ path('app_trace_edit', {'id': this.trace.id}) }}">
                    <button class="btn btn-secondary text-uppercase">Modifier</button>
                </a>
                <button class="btn btn-secondary text-uppercase" data-bs-toggle="modal"
                        data-bs-target="#delete{{ this.trace.id }}Modal">Supprimer
                </button>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="delete{{ this.trace.id }}Modal" tabindex="-1"
                 aria-labelledby="delete{{ this.trace.id }}ModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="delete{{ this.trace.id }}ModalLabel">Supprimer une
                                trace</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body d-flex flex-column align-items-center gap-4">
                            <twig:ux:icon name="bi:exclamation-octagon" width="50" height="auto" color="red"/>
                            <p class="text-danger">Attention, cette action est irréversible !</p>

                            <p>
                                La trace "{{ this.trace.libelle }}" va être supprimée. Êtes-vous sûr de vouloir
                                continuer ?
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <a href="{{ path('app_trace_delete', {'id': this.trace.id}) }}">
                                <button type="button" class="btn btn-primary">Confirmer</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
