<div{{ attributes }}>

    {% set totalValidations = this.trace.validations|length %}
    {% set validated = 0 %}

    {% for validation in this.trace.validations %}
        {% if validation.etat == 3 %}
            {% set validated = validated + 1 %}
        {% endif %}
    {% endfor %}

    {% set percentage = 0 %}
    {% if totalValidations != 0 %}
        {% set percentage = (validated/totalValidations)*100 %}
    {% endif %}

    <div class="my_card">
        <div class="card-header">
            <h5 class="card-title">{{ this.trace.libelle }}</h5>
        </div>
        <div class="card-body">
            <div class="card-infos-min border-bottom">
                <small>Publiée le : {{ this.trace.dateCreation|date("d-m-Y") }}</small>
                <small>{{ this.trace.contenu|length }}
                    {{ this.trace.type|lower }}{% if this.trace.contenu|length > 1 %}s{% endif %}
                </small>
            </div>
            <div class="card-competences">
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <div class="accordion-item">
                        <div class="accordion-header" id="flush-heading{{ this.trace.id }}">
                            <button class="accordion-button collapsed align-items-center flex-column" type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapse{{ this.trace.id }}" aria-expanded="false"
                                    aria-controls="flush-collapse{{ this.trace.id }}">
                                <div class="col-11">
                                    <h6>Validation des compétences</h6>
                                    <div class="progress">
                                        {% if percentage == 0 %}
                                            <div class="progress-bar" role="progressbar"
                                                 style="width: 100%; background-color: #6F18AD26"
                                                 aria-valuenow="0" aria-valuemin="0"
                                                 aria-valuemax="100">
                                                0%
                                            </div>
                                        {% endif %}
                                        <div class="progress-bar" role="progressbar"
                                             style="width: {{ percentage|round }}%"
                                             aria-valuenow="{{ percentage|round }}" aria-valuemin="0"
                                             aria-valuemax="100">
                                            {{ percentage|round }}%
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <i class="fa-solid fa-chevron-down"></i>
                                </div>
                            </button>
                        </div>
                        <div id="flush-collapse{{ this.trace.id }}" class="accordion-collapse collapse"
                             aria-labelledby="flush-heading{{ this.trace.id }}"
                             data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body" style="padding: 0">
                                <div class="biblio-competences">
                                    <ul>
                                        {% for validation in this.trace.validations %}
                                            <li>
                                                <div>
                                                    {% if validation.apcNiveau.actif == true %}
                                                        <span class="{{ validation.apcNiveau.apcCompetence.couleur }}">
                                                    {{ validation.apcNiveau.apcCompetence.nomCourt }}
                                                       </span> •
                                                        {{ validation.apcNiveau.libelle }}
                                                    {% else %}
                                                        <span class="{{ validation.apcNiveau.apcCompetence.couleur }}">
                                                    {{ validation.apcApprentissageCritique.apcCompetence.nomCourt }}
                                                       </span> •
                                                        {{ validation.apcApprentissageCritique.libelle }}
                                                    {% endif %}
                                                </div>
                                                {% if validation.etat == 0 %} <i class="fa-solid fa-hourglass-half"
                                                                                 style="color: #4c008b"></i>
                                                {% elseif validation.etat == 1 %} <i class="fa-solid fa-xmark"
                                                                                     style="color: red"></i>
                                                {% elseif validation.etat == 2 %} <i class="fa-solid fa-arrow-up"
                                                                                     style="color: orange"></i>
                                                {% elseif validation.etat == 3 %} <i class="fa-solid fa-check"
                                                                                     style="color: limegreen"></i>
                                                {% endif %}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center m-3">
                <a href="#" class="btn btn-primary-color text-uppercase">Voir</a>
                <a href="#" class="btn btn-secondary-color text-uppercase">Modifier</a>
                <a href="#" class="btn btn-secondary-color text-uppercase">SUpprimer</a>
            </div>
        </div>
    </div>
</div>
