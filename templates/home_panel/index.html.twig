{% extends 'base.html.twig' %}

{% block title %}UniFolio - Home{% endblock %}

    {% block header %}
    {% endblock %}

{% block main %}

    <section class="container d-flex justify-content-center align-items-center h-100">
        <div class="row justify-content-center">
            <div class="card col-3 panel panel_secondary flex-column align-items-center justify-content-center p-5 m-2">
                <h2 class="text-uppercase panel-title">dashboard</h2>
                <ul>
                    <li>Tes portfolios et traces</li>
                    <li>Des retours pédagogiques</li>
                    <li>Un suivi de l'évaluation</li>
                </ul>
                <a href="" class="panel-btn-dashboard">
                    <button class="btn btn-primary btn-secondary-color text-uppercase">
                        Accéder
                    </button>
                </a>
                <img class="illu_dashboard" src="{{ asset('images/dashboard.png') }}" alt="">
            </div>
            <div class="flex-column col-4">
                <div class="row">
                    <a class="card panel panel_primary g-2 p-3 m-2 col-5 panel_link d-flex flex-column align-items-center justify-content-between" href="">
