{% extends 'base.html.twig' %}

{% block title %}UniFolio - Dashboard{% endblock %}

    {% block header %}
    {% endblock %}

{% block main %}
    <nav aria-label="breadcrumb" style="position:absolute; top: 80px; left: 75px;">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home_panel') }}" class="link">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard_etudiant') }}" class="link">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_biblio_traces') }}" class="link">Biblioth√®que de traces</a></li>
            <li class="breadcrumb-item active" aria-current="page">Trace {{ trace.libelle }}</li>
        </ol>
    </nav>
    <section class="container-custom min-vh-100 section-pt">
        <article class="row content-article">
            <div class="card col-12 p-5">
                {% if portfolio is not null %}
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item breadcrumb-item-secondary"><a href="{{ path('app_portfolio_univ_show', {'id': portfolio.id}) }}">Retour au portfolio</a></li>
                            <li class="breadcrumb-item breadcrumb-item-secondary" aria-current="page">{{ page.libelle }}</li>
                        </ol>
                    </nav>


                {% endif %}
                <twig:TraceContent id="{{ trace.id }}" edit="{{ edit }}" row="{{ row }}" />
            </div>
        </article>
    </section>
{% endblock %}
