<div{{ attributes }}>
    <div class="d-flex">
        <button class="btn btn-secondary text-uppercase m-4" data-bs-toggle="modal"
                data-bs-target="#staticBackdropDelete">
            Supprimer les portfolios sélectionnés
        </button>
        <!-- Modal Delete -->
        <div class="modal modal-lg fade" id="staticBackdropDelete" data-bs-backdrop="static"
             data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Voulez-vous vraiment supprimer ces portfolios
                            ?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Les portfolios sélectionnés seront supprimés.</p>
                        <p style="color: red">Attention, cette action est irréversible !</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler
                        </button>
                        <button class="btn btn-primary"
                                data-action="live#action"
                                data-action-name="deleteSelectedTraces"
                                data-bs-dismiss="modal">
                            Supprimer
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <a href="{{ path('app_portfolio_univ_new') }}" class="m-4">
            <button class="btn btn-secondary text-uppercase">
                Créer un portfolio universitaire
            </button>
        </a>
    </div>

    <div class="card p-4 col-12">
        <div class="card-body row g-4 d-flex">
            {% if this.allPortfolios is not empty %}
                {% for portfolio in this.allPortfolios %}
                    <div class="col-lg-4 col-12">
                        <twig:PortfolioUnivBiblioCard id="{{ portfolio.id }}"/>
                    </div>
                {% endfor %}
            {% else %}
                <div class="alert alert-warning col-6 text-center m-auto mt-5 mb-4" role="alert">
                    Aucun portfolio n'a été trouvé.
                </div>
            {% endif %}
        </div>
    </div>
</div>
