{% extends 'base.html.twig' %}

{% block title %}UniFolio - Dashboard{% endblock %}

    {% block header %}
    {% endblock %}

{% block main %}
    {% import 'macros/breadcrumbs.twig' as breadcrumb_macros %}
    {{ breadcrumb_macros.breadcrumbs([
        {'name': 'Accueil', 'url': '/'},
        {'name': 'Dashboard', 'url': '/etudiant/dashboard'},
        {'name': 'Biblioth√®que de traces', 'url': '/etudiant/traces'},
        {'name': 'Trace ' ~ trace.libelle, 'url': null}
    ]) }}

    <section class="container-custom min-vh-100 section-pt">
        <article class="row content-article">
            <div class="card col-12 p-5">
                {% if portfolio is not null %}
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item breadcrumb-item-secondary"><a
                                        href="{{ path('app_portfolio_univ_show', {'id': portfolio.id}) }}">Retour au
                                    portfolio</a></li>
                            <li class="breadcrumb-item breadcrumb-item-secondary"
                                aria-current="page">{{ page.libelle }}</li>
                        </ol>
                    </nav>


                {% endif %}
                <turbo-frame id="trace-zone">
                    <twig:TraceContent id="{{ trace.id }}" edit="{{ edit }}" row="{{ row }}"/>
                </turbo-frame>
            </div>
        </article>
    </section>
{% endblock %}
